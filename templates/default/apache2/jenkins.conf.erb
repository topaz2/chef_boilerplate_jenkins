<VirtualHost *:80>
  ServerName <%= node[:boilerplate_jenkins][:host] %>
  ServerAdmin webmaster@localhost
  <Proxy *>
    Order deny,allow
    Allow from all
  </Proxy>
  ProxyRequests Off
  ProxyPreserveHost on
  ProxyPass        <%= node[:boilerplate_jenkins][:path] %> http://localhost:8080<%= node[:boilerplate_jenkins][:path] %> nocanon
  ProxyPassReverse <%= node[:boilerplate_jenkins][:path] %> http://localhost:8080<%= node[:boilerplate_jenkins][:path] %>
  AllowEncodedSlashes NoDecode
</VirtualHost>
